<!-- views/blog.handlebars -->

<div class="container">
	<div class="row">
		<div class="col-md-10 justify-content-center">

<div class="form-group">
	<label for="title">Title</label>
	<input type="text" class="form-control" placeholder="Title" autocomplete="off">
	</div>

	<div class="form-group">
	<label for="author">Author</label>
	<input type="text" class="form-control" placeholder="Stephen Smith" autocomplete="off">
</div>

<div class="form-group">
	<label for="description">Description</label>
	<textarea class="form-control" rows="2" placeholder="This week we'll take a look at..." ></textarea>
</div>


<div class="form-group">
	<label for="blog">Blog</label>
	<textarea class="form-control" rows="10" placeholder="Blog. Blog. Blog. All day long."></textarea>
</div>

<div class="form-group" style="text-align: right;">
	<button type="submit" action=":id/api/blogPost" style="cursor:pointer;">Post!</button>
</div>

</div>
</div>
</div>