<!-- views/articleShow.handlebars -->

<div class="container">
<div class="row">

<!-- Post Content Column -->
	<div class="col-lg-8">

		<!-- Title -->
			<h1 class="mt-4">{{post.title}}</h1>

		<!-- Author -->
			<p class="lead">
				by
				<a href="#">{{post.author}}</a>
			</p>

		<hr>

		<!-- Date/Time -->
		<p>Posted on: {{post.createdOn}}</p>

		<hr>

		<!-- Preview Image -->
		<img src="/artImages/{{post.imagePath}}" alt="{{post.title}} image" class="img-fluid rounded"  id="articleImage"/>
		
		<hr>

		<!-- Post Content -->
		<p class="text-center">{{{data}}}</p>


		<!-- Comments Form -->
		<div class="card my-4">
			<div class="card-body">
				{{> comments}}
			</div>
		</div>


		<!-- Show Comments -->
		<div class="media mb-4">
			<div class="media-body">
				{{> showComment}}
			</div>
		</div>


		<!-- Pagination -->
		<ul class="pagination mb-4">
			<li class="page-item">
			<a class="page-link bg-info text-white" href="/">&larr; Home</a>
			</li>
		</ul>



	</div>


	<!-- Sidebar Widgets Column -->
<div class="col-md-4">


	<!-- Search Widget -->
	<div class="card my-4">
		<h5 class="card-header">Search</h5>
		<div class="card-body">
			<form method="post" action="/widgetSearch" autocomplete="off">
			<small class="text-muted">Search by Title, Author, or Category</small>
			<div class="input-group">
				<input type="text" class="form-control" name="inquiry" placeholder="Search for...">
				<span class="input-group-btn">
					<button class="btn btn-success" type="submit">Go!</button>
				</span>
			</div>
		</form>
		</div>
	</div>



<!-- Categories Widget -->
<div class="card my-4">
	<h5 class="card-header">Categories</h5>
	<div class="card-body">
		<div class="row">
			<div class="col-lg-6">
			<ul class="list-unstyled mb-0">
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Writing"><button type="submit" class="btn-link">Writing</button>
						</form>
					</li>
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Lifestyle"><button type="submit" class="btn-link">Lifestyle</button>
						</form>
					</li>
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Tips"><button type="submit" class="btn-link">Tips</button>
						</form>
					</li>
				</ul>
			</div>
			<div class="col-lg-6">
				<ul class="list-unstyled mb-0">
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Communication"><button type="submit" class="btn-link">Communication</button>
						</form>
					</li>
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Who Knows"><button type="submit" class="btn-link">Who knows?</button>
						</form>
					</li>
					<li>
						<form method="post" action="/getCategory">
						<input type="hidden" name="category" value="Else"><button type="submit" class="btn-link">Else</button>
						</form>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>



<!-- Side Widget -->
<div class="card my-4">
	<h5 class="card-header">Side Widget</h5>
	<div class="card-body">
		You can put anything you want inside of these side widgets!
	</div>
</div>

</div>

</div>
<!-- /.row -->

</div>
<!-- /.container -->