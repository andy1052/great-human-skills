<!-- views/editArticle.handlebars -->


{{#if admin}}

		<!-- This is a button for front end call -->
		<div class="row justify-content-center">
			<div class="col-lg-10">
			<form>
				<fieldset>
				<div class="form-group">
			<input type="hidden" name="admin" value="{{admin}}">
		</div>

				<div class="form-group">
					<label for="artSearch">Article Search</label>
					<input  id="testForm" type="text" class="form-control" name="artSearch" placeholder="Title" autocomplete="off">
				</div>

		<div class="form-group">
			<button id="test-button" type="click" class="btn btn-dark">
				Search!
			</button>
		</div>
	</fieldset>
	</form>
</div>
</div>

<div class="row justify-content-center">
	<div class="col-lg-10">
<div class="form-group">
		<!-- Quill edit editor will appear here -->
		<div id="editor"></div>
	</div>
</div>
</div>



{{else}}
<div class="row">
	<div class="col">
		<h1>Whoa, hang on! You're not supposed to be here.</h1>
		<h3>If you stay here for longer than thirty seconds, your computer will be fucked</h3>
	</div>
</div>

{{/if}}