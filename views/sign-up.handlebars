<!-- views/sign-up.handlebars -->


<div class="row justify-content-center">
	<div class="col-sm-6 col-sm-offset-3">
		<legend class="mb-4">Sign Up!</legend>
<form method="post" action="/sign-up" enctype="multipart/form-data" autocomplete="off">

<fieldset>
	<!-- Photo/image -->
	<div class="form-group d-inline m-1">
	<label for="profilePic">Upload A Profile Pic</label>
	<input type="file" id="prof" class="form-control" name="profilePic" accept="image/jpg, image/png, image/jpeg" onchange="showPic(this.files)">

	<!-- Preview of Profile Pic -->
	<div class="form-group d-inline">
		<div id="profile" class="rounded"></div>
	</div>


	</div>


	<!-- Username -->
	<div class="form-group">
		<label for="username" style="display:block;">Choose A Username</label>
		<input class="form-control" id="username" type="text" name="username" placeholder="The Dude"/>
	</div>

	<!-- Email -->
	<div class="form-group">
		<label for="email" style="display:block;">Enter Your Email</label>
		<input class="form-control" id="email" type="email" name="email" placeholder="email@example.com"/>
	</div>

	<div class="form-group">
		<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
	</div>

	<!-- Password -->
	<div class="form-group">
		<label for="password" style="display:block;">Create A Good Password</label>
		<small class="form-text text-muted">Do yourself a favor and be creative, don't use a password you use other places, and mix it up with capital letters, symbols, and numbers for best results. The most secure system in the world cannot protect against poor passwords.</small>
		<input class="form-control mt-3" id="password" type="password" name="password" placeholder="Password"/>
	</div>

	<!-- Notification agreement -->
	<div class="form-group mt-3">
		<label for="notification" class="d-block">Would you like to receive a notification when a new article has been published?</label>
	<select name="notification">
		<option value="yes">Yes, send me notification of new articles</option>
		<option value="no">No, do not send me notification of new articles</option>
	</select>

	</div>

	<!-- Button -->
	<div class="form-group mt-4">
	<button class="btn btn-success m-0" type="submit">Sign Up!</button>
	</div>

	</fieldset>
	</form>
	</div>
	</div>
