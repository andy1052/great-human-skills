	<div class="row">
		<div class="col-12">
			<h1>Great Human Skills!</h1>
		</div>

		<div class="col-12">
			{{#if currentUser}}
			<p>Hi, {{currentUser.username}}! Check out what's new!</p>
			{{else}}
			{{/if}}
		</div>

			{{#each find}}
			<div class="col-lg">
			<div class="card">
				<div class="card-header">
					Featured
				</div>
				<div class="card-body">
					<h5 class="card-title">{{this.title}}</h5>
					<p class="card-text">{{this.description}}</p>
					<p class="card-footer">Posted On: {{this.createdOn}}</p>
					<a href="/posts/{{this._id}}" class="btn btn-success">Read On</a>
				</div>
			</div>
		</div>
			{{/each}}



