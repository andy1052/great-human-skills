<!-- views/blog.handlebars -->

<div class="container">
<div class="row">
	<div class="col-md-10 justify-content-center">





<!-- If admin logged in, provide functionality -->
		{{#if token}}
		<form method="POST" action="/getEdit" autocomplete="off">
			<fieldset>

				<!-- Pass in admin for security-->
				<input type="hidden" value="{{admin}}">

				<!-- Button -->
				<div class="form-group">
					<button type="submit" class="btn btn-dark">Edit An Article</button>
				</div>


			</fieldset>
		</form>
		{{/if}}
<!-- End of Admin Search form -->

<!-- Beginning of new articlesMeta form -->

		<legend>Login</legend>
<form method="post" action="/blogSave" autocomplete="off">

<fieldset>

<div class="form-group">
	<label for="title">Title</label>
	<input type="text" class="form-control" name="title" placeholder="Title" autocomplete="off">
	</div>

	<div class="form-group">
	<label for="author">Author</label>
	<input type="text" class="form-control" name="author" placeholder="Stephen Smith" autocomplete="off">
</div>

<div class="form-group">
	<label for="description">Description</label>
	<textarea class="form-control" name="description" rows="2" placeholder="This week we'll take a look at..." ></textarea>
</div>


<div class="form-group">
	<label for="artImage">Image</label>
	<input type="text" class="form-control" name="artImage" placeholder="/artImages/{image-name}{file-type}" autocomplete="off">
</div>

<!--
<div class="form-group">
	<label for="artImage">Upload Image</label>
	<input  type="file" class="form-control" name="artImage" accept="image/*">
</div> -->


<div class="form-group">
	<label for="category" class="d-block">Category</label>
	<select name="category">
		<option class="text-muted" value="none">Choose One</option>
		<option value="Writing">Writing</option>
		<option value="Lifestyle">Lifestyle</option>
		<option value="Tips And Tricks">Tips And Tricks</option>
		<option value="Communication">Communication</option>
	</select>
</div>

<div class="form-group">
	<select name="state">
		<option value="draft" selected>Draft</option>
		<option value="published">Publish</option>
	</select>
</div>


<div class="form-group" style="text-align: right;">
	<button class="btn btn-dark" type="submit">Post!</button>
</div>

</fieldset>
</form>
</div>
</div>
</div>